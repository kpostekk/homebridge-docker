{
  "pluginAlias": "Docker",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "host": {
        "title": "Host",
        "type": "string",
        "required": true,
        "placeholder": "http://192.168.1.100 or unix:///var/run/docker.sock",
        "typeahead": {
          "source": [
            "http://192.168.1.",
            "http://127.0.0.1",
            "http://localhost",
            "unix:///var/run/docker.sock"
          ]
        },
        "description": "Address of Docker host.",
        "format": "uri"
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "required": false,
        "placeholder": "2375",
        "description": "Leave it empty if are you planning to use linux socket."
      },
      "secureDelayTimeout": {
        "title": "Timeout for miss clicks",
        "type": "integer",
        "required": false,
        "placeholder": "5000",
        "description": "Time window for miss clicks in milliseconds. Leave empty to disable this feature."
      }
    }
  }
}