{
  "pluginAlias": "homebridge-plugin-docker",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Host",
        "type": "string",
        "required": true,
        "placeholder": "192.168.1.100"
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "required": true,
        "default": 2375,
        "placeholder": "2375"
      }
    }
  }
}