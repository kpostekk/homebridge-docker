{
  "pluginAlias": "Docker",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "host": {
        "title": "Host",
        "type": "string",
        "required": true,
        "placeholder": "http://192.168.1.100",
        "typeahead": {
          "source": [
            "http://192.168.1.",
            "http://127.0.0.1",
            "http://localhost"
          ]
        },
        "description": "Address of Docker host.",
        "format": "uri"
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "required": true,
        "default": 2375,
        "placeholder": "2375"
      }
    }
  }
}